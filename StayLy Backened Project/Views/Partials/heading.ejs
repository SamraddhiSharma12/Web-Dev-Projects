<head>
  <link href="/public/css/navbar.css" rel="stylesheet">
</head>

<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">

    <a
      href="/"
      class="text-xl font-bold <%= currentPage === 'index' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
    >
      StayLY
    </a>

    <ul class="flex items-center space-x-4">
      
      <% if(isLoggedIn) { %>
        
        <% if(user && user.userType === 'guest') { %>
          <li>
            <a
              href="/fav-list" class="<%= currentPage === 'favourites' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
              >Favourites</a>
          </li>
          <li>
            <a
              href="/home-list"
              class="<%= currentPage === 'Home' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
              >Homes</a>
          </li>
          <li>
            <a
              href="/bookings" class="<%= currentPage === 'bookings' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
              >Bookings</a>
          </li>
        <% } else { %>
          <li>
            <a
              href="/host/host-home-list"
              class="<%= currentPage === 'host-homes' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
              >Host Homes</a>
          </li>
          <li>
            <a
              href="/host/add-home"
              class="<%= currentPage === 'addHome' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-3B00"
              >Add Home</a>
          </li>
          <li>
            <a href="/edit-home" class="<%= currentPage === 'edit-home' ?  'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300">Contact</a>
          </li>
        <% } %>
        
      <% } %>

      <% if(!isLoggedIn && currentPage !== 'Login' && currentPage !== 'Signup') { %>
        <li>
          <a href="/login" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">
            Login
          </a>
        </li>
        <li>
          <a href="/signup" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">
            Sign Up
          </a>
        </li>
      <% } %>

      <% if(isLoggedIn) { %>
        <li> 
          <form action="/logout" method="POST">
            <button type="submit"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>
</header>